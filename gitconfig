[user]
	name = Jonathan Poltak Samosir
	email = jonathan.samosir@gmail.com
[push]
	default = tracking
[core]
	editor = vim
	excludesfile = /Users/poltak/.gitignore_global
[merge]
	tool = vscode
[mergetool "vscode"]
	keepBackup = false
	cmd = code --wait $MERGED
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[credential]
	helper = osxkeychain
[color]
	ui = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[interactive]
  diffFilter = diff-highlight
[commit]
	verbose = true
[color "diff"]
	old = red strike
	new = green italic
