{
    // Editor options
	"editor.wrappingColumn": 120,
	"editor.mouseWheelScrollSensitivity": 2.5,
	"editor.quickSuggestionsDelay": 0,
	"editor.renderWhitespace": true,
    "editor.tabSize": 2,
	"editor.insertSpaces": true,
    
    // Excluded folder from the directory viewer
    "search.excludeFolders": [
        ".git",
        ".meteor/local",
        ".idea",
        "node_modules",
        "bower_components"
    ],
    
    // JS stuff
    "javascript.suggest.alwaysAllWords": true,
    "javascript.suggest.useCodeSnippetsOnMethodSuggest": true,
    "javascript.validate.lint.comparisonOperatorsNotStrict": "warning",
    "javascript.validate.lint.curlyBracketsMustNotBeOmitted": "warning"
}